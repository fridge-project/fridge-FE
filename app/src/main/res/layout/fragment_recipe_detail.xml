<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.Recipe.RecipeDetailFragment">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recipe_detail_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/recipe_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarColoredBackArrow"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/bookmark_off"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toStartOf="@+id/recipe_detail_share_iv"
                app:layout_constraintTop_toTopOf="@+id/recipe_detail_share_iv"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_detail_share_iv"
                />
            <ImageView
                android:id="@+id/recipe_detail_share_iv"
                android:src="@drawable/share"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@+id/recipe_detail_like_iv"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_detail_like_iv"
                app:layout_constraintEnd_toStartOf="@+id/recipe_detail_like_iv"/>
            <ImageView
                android:id="@+id/recipe_detail_like_iv"
                android:src="@drawable/like_off"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>